package DAY4;

import java.util.Scanner;

public class sumofdigit {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int sum=0;
		int num = 15;
		while(num >0)
		{
			int temp= num%10;
			sum= sum+temp;
			num= num/10;
		}
		System.out.println(sum);

	}

	public void display() {
		// TODO Auto-generated method stub
		
	}

}
